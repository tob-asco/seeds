<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="seeds1.View.DetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:seeds1.ViewModel"
    Title="{Binding FeedEntry.Idea.Title}"
    x:DataType="local:DetailViewModel">
    <VerticalStackLayout Padding="10,3">
        <Label
            Margin="0,0,0,10"
            FontSize="Large"
            Text="Description" />
        <Label Text="{Binding DisplayedDescription}" />
    </VerticalStackLayout>
</ContentPage>