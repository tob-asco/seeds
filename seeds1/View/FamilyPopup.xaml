<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="seeds1.View.FamilyPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:seeds1.ViewModel"
    xmlns:mauiModel="clr-namespace:seeds1.MauiModels"
    xmlns:modelFromDb="clr-namespace:seeds.Dal.Dto.FromDb;assembly=seeds.Dal"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="root"
    x:DataType="local:FamilyPopupViewModel"
    Color="#111">

    <!--<VerticalStackLayout Padding="5">
        <Label Text="{Binding Family.Name}"/>
        <Entry Placeholder="Search" />-->
    <CollectionView ItemsSource="{Binding Family.Tags}" VerticalScrollBarVisibility="Always">
        <CollectionView.Header>
            <HorizontalStackLayout>
                <Label Text="{Binding Family.Name}" />
                <Entry Placeholder="Search" />
            </HorizontalStackLayout>
        </CollectionView.Header>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="modelFromDb:TagFromDb">
                <Button
                    Margin="1,2"
                    HeightRequest="45"
                    Style="{StaticResource buttonMediumStyle}"
                    Text="{Binding Name}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    <!--</VerticalStackLayout>-->

</toolkit:Popup>

